
<div id='post_content'>
	<h1 class="title">
		<%= @post.title %>
	</h1>

	<p class="date">
		Submitted: <%= time_ago_in_words(@post.created_at) %> ago |
		<span style="color:red; font-style:italic">
		<%= link_to 'edit', edit_post_path(@post) %>			
		  | 
		<%= link_to 'delete', post_path(@post), method: :delete, data: { confirm: 'Delete?' } %>
		</span>
	</p>

	<p class="body">
		<%= @post.body %>
	</p>
</div>